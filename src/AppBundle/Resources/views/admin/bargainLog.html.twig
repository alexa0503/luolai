{% extends 'AppBundle:admin:layout.html.twig' %}
{% block content %}
<div class="panel panel-default">
  <div class="panel-body">
    <div class="table-responsive">
      <table id="table2" class="table table-striped dataTable no-footer" role="grid" aria-describedby="table2_info">
      <thead>
       <tr role="row">
        <th tabindex="0" aria-controls="table2" rowspan="1" colspan="1" style="width: 40px;">ID</th>
        <th tabindex="0" aria-controls="table2" rowspan="1" colspan="1">Bargain ID</th>
        <th tabindex="0" aria-controls="table2" rowspan="1" colspan="1">用户</th>
        <th tabindex="0" aria-controls="table2" rowspan="1" colspan="1">物品</th>
        <th tabindex="0" aria-controls="table2" rowspan="1" colspan="1">店铺名</th>
        <th tabindex="0" aria-controls="table2" rowspan="1" colspan="1">砍掉金额</th>
        <th tabindex="0" aria-controls="table2" rowspan="1" colspan="1">操作时间</th>
        <th tabindex="0" aria-controls="table2" rowspan="1" colspan="1">操作IP</th>
      </tr>
     </thead>
     <tbody>
     {% for p in pagination %}
      <tr class="gradeA {% if loop.index is odd %} odd{% else %} even{% endif %}" role="row">
        <td>{{ p.id }}</td>
        <td>{{ p.bargain.id }}</td>
        <td><a href="#" target="_blank">{{ p.user.nickName }}</a></td>
        <td><a href="{{ url('admin_item_view',{id:p.bargain.item.id}) }}" target="_blank">{{ p.bargain.item.name }}</a></td>
        <td><a href="{{ url('admin_store_view',{id:p.bargain.item.store.id}) }}" target="_blank">{{ p.bargain.item.store.storeName }}</a></td>
        <td>{{ p.price }}</td>
          <td>{{ p.createTime | date("Y-m-d H:i:s") }}</td>
          <td>{{ p.createIp }}</td>
      </tr>
      {% endfor %}
      </tbody>
    </table>
<div class="dataTables_info" id="table2_info" role="status" aria-live="polite">共{{ pagination.getTotalItemCount }}条记录</div>
<div class="dataTables_paginate paging_full_numbers" id="table2_paginate">
{{ knp_pagination_render(pagination) }}
</div>
</div>
</div><!-- table-responsive -->

</div><!-- panel-body -->
</div>
{% endblock %}
{% block title %}店铺管理{% endblock %}
{% block javascripts %}
{{ parent() }}

{% endblock %}